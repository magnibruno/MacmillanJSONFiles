{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "book": {
      "type": "string"
    },
    "CEFRLevel": {
      "type": "string"
    },
    "dialect": {
      "type": "string"
    },
    "chapter": {
      "type": "object",
      "properties": {
        "chapterUnit": {
          "type": "string"
        },
        "chapterTitle": {
          "type": "string"
        },
        "chapterQuote": {
          "type": "string"
        },
        "chapterFrontImage": {
          "type": "string"
        },
        "chapterObjectives": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "sections": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "sectionNumber": {
                "type": "number"
              },
              "sectionTitle": {
                "type": "string"
              },
              "sectionObjective": {
                "type": "string"
              },
              "GKU": {
                "type": "string"
              },
              "sectionSkills": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "skillType": {
                      "type": "string"
                    },
                    "skillName": {
                      "type": "string"
                    },
                    "skillTitle": {
                      "type": "string"
                    }
                  },
                  "required": ["skillType", "skillName", "skillTitle"]
                }
              },
              "sectionPart": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "partTitle": {
                      "type": "string"
                    },
                    "partImage": {
                      "type": "string"
                    },
                    "partSubTitle": {
                      "type": "string"
                    },
                    "textContents": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "paragraphOrdinal": {
                            "type": "number"
                          },
                          "paragraphTitle": {
                            "type": "string"
                          },
                          "paragraphSubtitles": {
                            "type": "array",
                            "items": {
                              "type": "string"
                            }
                          },
                          "paragraphContents": {
                            "type": "array",
                            "items": {
                              "type": "string"
                            }
                          }
                        },
                        "required": ["paragraphOrdinal", "paragraphTitle", "paragraphSubtitles", "paragraphContents"]
                      }
                    },
                    "sets": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "setMarker": {
                            "type": "string"
                          },
                          "setHeading": {
                            "type": "string"
                          },
                          "setImage": {
                            "type": ["string", "null"]
                          },
                          "setAudioNumber": {
                            "type": ["number", "null"]
                          },
                          "setIgnore": {
                            "type": "boolean"
                          },
                          "grammarHub": {
                            "type": "boolean"
                          },
                          "exerciseType": {
                            "type": ["string", "null"]
                          },
                          "exerciseInstruction": {
                            "type": "string"
                          },
                          "exercises": {
                            "type": ["array", "null"],
                            "items": {
                              "type": "object",
                              "properties": {
                                "exerciseSentences": {
                                  "type": "array",
                                  "items": {
                                    "type": "object",
                                    "properties": {
                                      "sentenceOrdinal": {
                                        "type": "number"
                                      },
                                      "sentences": {
                                        "type": "array",
                                        "items": {
                                          "type": "string"
                                        }
                                      },
                                      "blankedWords": {
                                        "type": "array",
                                        "items": {
                                          "type": ["string", "number"]
                                        }
                                      }
                                    },
                                    "required": ["sentenceOrdinal", "sentences", "blankedWords"]
                                  }
                                },
                                "exerciseQuestion": {
                                  "type": ["string", "null"]
                                },
                                "exerciseMaxAnswer": {
                                  "type": ["number", "null"]
                                },
                                "exerciseMinAnswer": {
                                  "type": ["number", "null"]
                                },
                                "exerciseAnswers": {
                                  "type": ["string", "null"]
                                },
                                "LKUs": {
                                  "type": "array",
                                  "items": {
                                    "type": "string"
                                  }
                                },
                                "context": {
                                  "type": "string"
                                }
                              },
                              "required": ["exerciseSentences"]
                            }
                          },
                          "wordBank": {
                            "type": ["array", "null"],
                            "items": {
                              "type": "string"
                            }
                          },
                          "textContents": {
                            "type": ["array", "null"],
                            "items": {
                              "type": "object",
                              "properties": {
                                "paragraphOrdinal": {
                                  "type": "number"
                                },
                                "paragraphTitle": {
                                  "type": "string"
                                },
                                "paragraphSubtitles": {
                                  "type": "array",
                                  "items": {
                                    "type": "string"
                                  }
                                },
                                "paragraphContents": {
                                  "type": "array",
                                  "items": {
                                    "type": "string"
                                  }
                                }
                              },
                              "required": ["paragraphOrdinal", "paragraphTitle", "paragraphSubtitles", "paragraphContents"]
                            }
                          }
                        },
                        "required": ["setMarker", "setIgnore", "exerciseInstruction"]
                      }
                    }
                  },
                  "required": ["partTitle", "partImage", "partSubTitle", "sets"]
                }
              }
            },
            "required": ["sectionNumber", "sectionTitle", "sectionObjective", "GKU", "sectionSkills", "sectionPart"]
          }
        }
      },
      "required": ["chapterUnit", "chapterTitle", "chapterQuote", "chapterFrontImage", "chapterObjectives", "sections"]
    }
  },
  "required": ["book", "CEFRLevel", "dialect", "chapter"]
}