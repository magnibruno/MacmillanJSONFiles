            "textContents": [
                {
                    "paragraphOrdinal": 1,
                    "paragraphTitle": "The passive voice",
                    "paragraphSubtitles": null,
                    "paragraphContents": [
                        "We form the passive voice with be + past participle."
                    ]
                },
                {
                    "paragraphOrdinal": 2,
                    "paragraphTitle": null,
                    "paragraphSubtitles": null,
                    "paragraphContents": [
                        "The passive voice can be formed with all tenses - only the form of be changes."
                    ]
                },
                {
                    "paragraphOrdinal": 3,
                    "paragraphTitle": null,
                    "paragraphSubtitles": null,
                    "paragraphContents": [
                        "We use the passive voice when we don't know who or what caused an action."
                    ]
                },
                {
                    "paragraphOrdinal": 4,
                    "paragraphTitle": null,
                    "paragraphSubtitles": null,
                    "paragraphContents": [
                        "We use the passive voice when it's not important who or what caused an action."
                    ]
                },
                {
                    "paragraphOrdinal": 5,
                    "paragraphTitle": null,
                    "paragraphSubtitles": null,
                    "paragraphContents": [
                        "We use the passive voice when we want to focus on the person or thing that received the action."
                    ]
                }
            ],
