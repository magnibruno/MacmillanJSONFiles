                {
                    "paragraphOrdinal": 1,
                    "paragraphTitle": "Narrative tenses",
                    "paragraphSubtitles": null,
                    "paragraphContents": [
                        "We use the simple past for completed actions that are the main events in a story."
                    ]
                },
                {
                    "paragraphOrdinal": 2,
                    "paragraphTitle": null,
                    "paragraphSubtitles": null,
                    "paragraphContents": [
                        "We use the past progressive for actions in progress at a particular point in time."
                    ]
                },
                {
                    "paragraphOrdinal": 3,
                    "paragraphTitle": null,
                    "paragraphSubtitles": null,
                    "paragraphContents": [
                        "We use the past progressive when a longer action is interrupted by a shorter action."
                    ]
                },
                {
                    "paragraphOrdinal": 4,
                    "paragraphTitle": null,
                    "paragraphSubtitles": null,
                    "paragraphContents": [
                        "We use the past progressive to set the scene of a story."
                    ]
                },
                {
                    "paragraphOrdinal": 5,
                    "paragraphTitle": null,
                    "paragraphSubtitles": null,
                    "paragraphContents": [
                        "We use the past perfect for completed actions that happened before the main event."
                    ]
                },
                {
                    "paragraphOrdinal": 6,
                    "paragraphTitle": null,
                    "paragraphSubtitles": null,
                    "paragraphContents": [
                        "We use the past perfect progressive for longer actions that started before other events and continued up to these events."
                    ]
                }
            ],
