                  "paragraphImage": "",
                  "paragraphTitle": "",
                  "paragraphSubtitles": [
                    "-ing forms: Rules"
                  ],
                  "paragraphContents": [
                    "We use the present participle -ing form with the verb to be to talk about things that are happening now or around now.",
                    "We use -ing form as adjectives to describe nouns.",
                    "We use -ing form as gerunds to make nouns."
                  ]
                }
