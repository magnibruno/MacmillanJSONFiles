                {
                  "paragraphOrdinal": 1,
                  "paragraphTitle": "Comparatives and superlatives",
                  "paragraphSubtitles": [],
                  "paragraphContents": [
                    "Put the comparative and superlative adjectives and adverbs in the correct place."
                  ]
                },
                {
                  "paragraphOrdinal": 2,
                  "paragraphTitle": null,
                  "paragraphSubtitles": [
                    "one syllable adj"
                  ],
                  "paragraphContents": [
                    "Comparative : adjective + -er (+ than)",
                    "Examples: cheaper, lighter",
                    "Superlative: the + adjective + -est",
                    "Examples : the cheapest, the lightest"
                  ]
                },
                {
                  "paragraphOrdinal": 3,
                  "paragraphTitle": null,
                  "paragraphSubtitles": [
                    "adj with two + syllables"
                  ],
                  "paragraphContents": [
                    "Comparative : more + adjective (+ than)",
                    "Examples: more useful, more expensive",
                    "Superlative: the most + adjective",
                    "Examples: the most useful, the most expensive"
                  ]
                },
                {
                  "paragraphOrdinal": 4,
                  "paragraphTitle": null,
                  "paragraphSubtitles": [
                    "adj with two + syllables ending in -y"
                  ],
                  "paragraphContents": [
                    "Comparative : we cut the -y and add -ier",
                    "Examples: heavier, easier",
                    "Superlative: we cut the -y and add - iest",
                    "Examples: the heaviest, the easiest"
                  ]
                },
                {
                  "paragraphOrdinal": 5,
                  "paragraphTitle": null,
                  "paragraphSubtitles": [
                    "irregular adj"
                  ],
                  "paragraphContents": [
                    "Comparative : adjective (+ than)",
                    "Examples: better, worse",
                    "Superlative: the + adjective",
                    "Examples: the best, the worst"
                  ]
                },
                {
                  "paragraphOrdinal": 6,
                  "paragraphTitle": null,
                  "paragraphSubtitles": [
                    "regular adv"
                  ],
                  "paragraphContents": [
                    "Comparative : more + adverb",
                    "Examples: more slowly, more quickly",
                    "Superlative: the most + adverb",
                    "Examples: the most slowly, the most quickly"
                  ]
                }
              ],
