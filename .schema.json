{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$comment": "This document is a JSON Schema for the structure of the JSON data that will be used to generate the content of the Macmillan Chapters. $comment is used to add comments to the schema. The comments are not used for validation purposes.",
  "type": "object",
  "properties": {
    "book": {
      "type": "string",
      "$comment": "This document is a JSON Schema for the structure of the JSON data that will be used to generate the content of the Macmillan Chapters."
    },
    "CEFRLevel": {
      "type": "string"
    },
    "dialect": {
      "type": "string"
    },
    "chapter": {
      "type": "object",
      "properties": {
        "chapterUnit": {
          "type": "string"
        },
        "chapterTitle": {
          "type": "string"
        },
        "chapterQuote": {
          "type": "string"
        },
        "chapterFrontImage": {
          "type": "string"
        },
        "chapterObjectives": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "sections": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "sectionNumber": {
                "type": "number"
              },
              "sectionTitle": {
                "type": "string"
              },
              "sectionObjective": {
                "type": "string"
              },
              "sectionSkills": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "skillType": {
                      "type": "string"
                    },
                    "skillName": {
                      "type": "string"
                    },
                    "skillTitle": {
                      "type": "string"
                    }
                  },
                  "required": ["skillType", "skillName", "skillTitle"]
                }
              },
              "hasReading": {
                "type": "boolean",
                "$comment": "POSSIBLE VALUES = true or false with no quotes."
              },
              "GKU": {
                "type": "string"
              },
              "sectionPart": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "partTitle": {
                      "type": "string"
                    },
                    "partImage": {
                      "type": ["string", "null"]
                    },
                    "partSubTitle": {
                      "type": ["string", "null"]
                    },
                    "textMode": {
                      "type": "string"
                    },
                    "textContents": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {                          
                          "paragraphOrdinal": {
                            "type": "integer"
                          },
                          "paragraphTitle": {
                            "type": ["string", "null"]
                          },
                          "paragraphSubtitles": {
                            "type": ["array", "null"],
                            "items": {
                              "type": ["string", "null"]
                            }
                          },
                          "paragraphContents": {
                            "type": "array",
                            "items": {
                              "type": "string"
                            }
                          }
                        },
                        "required": ["paragraphOrdinal", "paragraphTitle", "paragraphSubtitles", "paragraphContents"]
                      }
                    },
                    "sets": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "setMarker": {
                            "type": "string"
                          },
                          "setHeading": {
                            "type": "string"
                          },
                          "textImage": {
                            "type": ["string", "null"]
                          },
                          "setAudioNumber": {
                            "type": ["number", "null"]
                          },
                          "setIgnore": {
                            "type": "boolean",
                            "$comment": "POSSIBLE VALUES = true or false with no quotes."
                          },                          
                          "exerciseType": {
                            "type": ["string", "null"]
                          },
                          "exerciseInstruction": {
                            "type": ["string", "null"]
                          },
                          "exerciseQuestion": {
                            "type": "string"
                          },
                          "exerciseMaxAnswer": {
                            "type": ["string", "null"]
                          },
                          "exerciseMinAnswer": {
                            "type": "string"
                          },
                          "LKUs": {
                            "type": ["array", "string", "null"],
                            "items": {
                              "type": "string"
                            }
                          },
                          "exercises": {
                            "type": ["array", "null"],
                            "items": {
                              "type": "object",
                              "properties": {
                                "sentenceOrdinal": {
                                  "type": "integer"
                                },
                                "exerciseQuestion": {
                                  "type": ["string", "null"]
                                },
                                "exerciseAnswers": {
                                  "type": ["array", "string", "null"],
                                  "items": {
                                    "type": "string"
                                  }
                                },
                                "exerciseMaxAnswer": {
                                  "type": ["string", "null"]
                                },
                                "exerciseMinAnswer": {
                                  "type": ["string", "null"]
                                },
                                "LKUs": {
                                  "type": ["array", "string", "null"],
                                  "items": {
                                    "type": "string"
                                  }
                                },
                                "sentenceAnswerOptions": {
                                  "type": "array",
                                  "items": {
                                    "type": "string"
                                  }
                                },
                                "context": {
                                  "type": "string"
                                }
                              },
                              "required": ["sentenceOrdinal", "exerciseQuestion", "exerciseAnswers", "exerciseMaxAnswer", "exerciseMinAnswer", "LKUs"]
                            }
                          },
                          "explanationBox": {
                            "type": "array",
                            "items": {
                              "type": "object",
                              "properties": {
                                "explanationTitle": {
                                  "type": "string"
                                },
                                "explanationContent": {
                                  "type": "array",
                                  "items": {
                                    "type": "string"
                                  }
                                }
                              },
                              "required": ["explanationTitle", "explanationContent"]
                            }
                          }
                        },
                        "required": ["setMarker", "setHeading","exerciseType"]
                      }
                    }
                  },
                  "required": ["partTitle", "partImage", "textContents", "sets"]
                }
              }
            },
            "required": ["sectionNumber", "sectionTitle", "sectionObjective", "sectionSkills", "hasReading"]
          }
        }
      },
      "required": ["chapterUnit", "chapterTitle", "chapterQuote", "chapterFrontImage", "chapterObjectives", "sections"]
    }
  },
  "required": ["book", "CEFRLevel", "dialect", "chapter"]
}